<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:columnCount="1"
    android:background="@drawable/gradient_a">


    <Button
        android:id="@+id/tampilForexButton"
        android:layout_width="386dp"
        android:layout_height="99dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_dollar_128"
        android:text="Forex"
        android:textColor="#fff">

    </Button>

    <Button
        android:id="@+id/tampilMahasiswaButton"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/student"
        android:text="Master Mahasiswa"
        android:textColor="#fff"></Button>

    <Button
        android:id="@+id/tampilCuacaButton"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_weather_lightning_128"
        android:text="Cuaca"
        android:textColor="#fff"></Button>

    <Button
        android:id="@+id/tampilImplicitButton"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_teenagers_128"
        android:text="ImplicitIntent"
        android:textColor="#fff"></Button>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_full_icon"
        android:textColor="#fff"
        android:text="Tab Layout"
        android:id="@+id/tampilTabLayoutButton"></Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_hotel_app"
        android:textColor="#fff"
        android:text="Hotel App"
        android:id="@+id/tampilHotelAppButton"></Button>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_we"
        android:textColor="#fff"
        android:text="Web View Lanjutan"
        android:id="@+id/tampilWebViewLanjutan"></Button>

</GridLayout>